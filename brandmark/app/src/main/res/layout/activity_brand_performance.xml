<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".view.planogram.activity.PlanogramActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/toolbar_layout"
            android:background="@drawable/toolbar_bg"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:id="@+id/btnBack"
                android:layout_marginLeft="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_arrow_back_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:id="@+id/btnHome"
                android:layout_marginLeft="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_home"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/btnBack"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:id="@+id/tvTitle"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:text=" "
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_2sdp"
                app:layout_constraintLeft_toRightOf="@+id/btnHome"
                android:singleLine="true"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/btnDrillDown"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text=" "
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
                app:layout_constraintRight_toRightOf="@+id/tvTitle"/>



            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:id="@+id/btnDrillDown"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_drill_down"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            style="@style/tabLayot"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerLayout"
            android:padding="@dimen/_4sdp"
            app:layout_constraintTop_toBottomOf="@+id/tabs"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBNLbl"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="Brand:"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toTopOf="@+id/spBrandName"
                app:layout_constraintBottom_toBottomOf="@id/spBrandName"/>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spBrandName"
                android:layout_marginLeft="@dimen/_1sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvBNLbl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDatePick"
                android:text="Date"
                android:visibility="gone"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:drawablePadding="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:drawableRight="@drawable/ic_calender"
                app:layout_constraintRight_toLeftOf="@+id/btnGraph"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="@dimen/_10sdp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnGraph"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_graph"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="@dimen/_16sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value in Lacs"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/tvLblLac"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLayout"
            app:layout_constraintBottom_toBottomOf="parent" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.2"
            android:id="@+id/tvEmployeeId"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:rotation="-40"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/_59sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Data Found!!!"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tvErrorMsg"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>