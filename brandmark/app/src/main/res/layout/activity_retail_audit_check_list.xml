<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_bg"
        tools:context=".view.brandmark.RetailAuditActivity">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_layout"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:id="@+id/dataLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/centerView"/>

                <Spinner
                    android:id="@+id/spStoreName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/centerView"
                    android:textColor="@color/text"
                    android:layout_marginLeft="@dimen/_4sdp" />

                <Spinner
                    android:id="@+id/spBrand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    app:layout_constraintLeft_toRightOf="@+id/centerView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="@dimen/_4sdp"/>


                <EditText
                    android:id="@+id/etManagerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:hint="Manager name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/text"
                    app:layout_constraintTop_toBottomOf="@+id/spBrand"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/centerView" />

                <EditText
                    android:id="@+id/etAuditBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_border"
                    android:gravity="center"
                    android:hint="Audit By"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/etManagerName"
                    app:layout_constraintLeft_toRightOf="@+id/centerView"/>



                <TextView
                    android:id="@+id/LblDisplayStand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_bg"
                    android:gravity="left"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="DISPLAY STANDARDS"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:drawableRight="@drawable/ic_arrow_down_black"
                    app:layout_constraintTop_toBottomOf="@+id/etAuditBy"/>

                <LinearLayout
                    android:id="@+id/rvDisplayStandart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_4sdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/LblDisplayStand"/>


                <TextView
                    android:id="@+id/LblBusinessCM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_bg"
                    android:gravity="left"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Staff"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:drawableRight="@drawable/ic_arrow_down_black"
                    app:layout_constraintTop_toBottomOf="@+id/rvDisplayStandart"/>

                <LinearLayout
                    android:id="@+id/rvBusinessCM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/LblBusinessCM"/>


                <TextView
                    android:id="@+id/LblStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_bg"
                    android:gravity="left"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Business/Concept Manager"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_13sdp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/ic_arrow_down_black"
                    app:layout_constraintTop_toBottomOf="@+id/rvBusinessCM"
                    />

                <LinearLayout
                    android:id="@+id/rvBackStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/LblStaff"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/btnSubmit"
                    android:background="@drawable/round_button"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/rvBackStore"
                    android:layout_margin="@dimen/_20sdp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/btnSubmit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvErrorMsg"
            android:text="No Data Found!!!"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>