        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/singleItemDisplayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/editext_background"
            android:padding="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qtyLayout">

            <TextView
                android:id="@+id/tvItemDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemClicked != null ? itemClicked.equalsIgnoreCase(`sale`) ? saleType.equalsIgnoreCase(`FTD`) ? `Sale` : `Sale (L)`  : itemClicked.equalsIgnoreCase(`Budget Ach`) ? saleType.equalsIgnoreCase(`FTD`) ? `Budget Ach` : `Budget Ach(L)` : itemClicked : saleType.equalsIgnoreCase(`FTD`) ? `Sale` : `Sale (L)`}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvOA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Overall"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDisplay" />

            <TextView
                android:id="@+id/tvLFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="LFL"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOA" />


            <TextView
                android:id="@+id/tvItemPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Growth%"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="@+id/tvItemOaPer"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{itemClicked.equalsIgnoreCase(`Qty`) ? `No` : `Value`}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/tvItemOaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{itemClicked != null ? itemClicked.equalsIgnoreCase(`Sale`) ?  saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.sales : brandPerformance.sales/lacs : itemClicked.equalsIgnoreCase(`Budget Ach`) ? saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.salesBudgt : brandPerformance.salesBudgt/lacs : brandPerformance.slsQty: saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.sales : brandPerformance.sales/lacs}"
                bind:colorCombination="@{`NoChange`}"
                bind:symbol="@{itemClicked.equalsIgnoreCase(`Qty`) ? `` : saleType.equalsIgnoreCase(`FTD`) ? `₹` : `₹:L`}"
                bind:decimalFormat="@{saleType.equalsIgnoreCase(`FTD`) ? noDecimal : twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="@+id/tvValues"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDisplay" />

            <TextView
                android:id="@+id/tvItemLflValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{itemClicked != null ? itemClicked.equalsIgnoreCase(`Sale`) ?  saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.lflSales : brandPerformance.lflSales/lacs : itemClicked.equalsIgnoreCase(`Budget Ach`) ? saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.lflSalesBudgt : brandPerformance.lflSalesBudgt/lacs : brandPerformance.lflSlsQty: saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.lflSales : brandPerformance.lflSales/lacs}"
                bind:colorCombination="@{`NoChange`}"
                bind:symbol="@{itemClicked.equalsIgnoreCase(`Qty`) ? `` : saleType.equalsIgnoreCase(`FTD`) ? `₹` : `₹:L`}"
                bind:decimalFormat="@{saleType.equalsIgnoreCase(`FTD`) ? noDecimal : twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintStart_toStartOf="@+id/tvItemOaValue"
                app:layout_constraintTop_toBottomOf="@+id/tvItemOaValue" />
            <!--bind:percent="@{saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.sales/lacs :  brandPerformance.sales/crore}"-->

            <TextView
                android:id="@+id/tvItemOaPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{itemClicked != null ? itemClicked.equalsIgnoreCase(`Sale`) ? brandPerformance.slsGrowthPerc : itemClicked.equalsIgnoreCase(`Budget Ach`) ? brandPerformance.achievePerc : brandPerformance.slsQtyPerc: brandPerformance.slsGrowthPerc}"
                bind:colorCombination="@{itemClicked.equalsIgnoreCase(`Budget Ach`) ? `Budget` : `Change`}"
                bind:symbol="@{`%`}"
                bind:decimalFormat="@{twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemDisplay" />

            <TextView
                android:id="@+id/tvItemLflPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{itemClicked != null ? itemClicked.equalsIgnoreCase(`Sale`) ? brandPerformance.slsLflGrowthPerc : itemClicked.equalsIgnoreCase(`Budget Ach`) ? brandPerformance.lflAchievePerc : brandPerformance.lflSlsQtyPerc: brandPerformance.slsLflGrowthPerc}"
                bind:colorCombination="@{itemClicked.equalsIgnoreCase(`Budget Ach`) ? `Budget` : `Change`}"
                bind:symbol="@{`%`}"
                bind:decimalFormat="@{twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemOaPer" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/bp_msg"
            android:textStyle="italic"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>