<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="brandName"
            type="String" />

        <variable
            name="itemClicked"
            type="String" />

        <variable
            name="brandPerformance"
            type="com.lifestyle.retail_dashboard.view.brandperformance.model.SalePerformance" />

        <variable
            name="saleType"
            type="String" />


        <variable
            name="store"
            type="String" />

        <variable
            name="lacs"
            type="Double" />

        <variable
            name="crore"
            type="Double" />

        <variable
            name="oneDecimal"
            type="java.text.DecimalFormat" />

        <variable
            name="twoDecimal"
            type="java.text.DecimalFormat" />
        <variable
            name="noDecimal"
            type="java.text.DecimalFormat" />

        <variable
            name="onItemClick"
            type="com.lifestyle.retail_dashboard.view.brandperformance.fragment.BrandPerfDetailFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/_4sdp">

        <View
            android:id="@+id/centerView"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="@{brandName}"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/text"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintLeft_toLeftOf="@+id/saleLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBrandID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:text="Brand ID"
            android:textColor="@color/text"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/budAchLayout"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Text"
            android:visibility="gone"
            android:textColor="@color/text"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/tvMsg"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/saleLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_background"
            android:padding="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:onClick="@{(v)-> onItemClick.updateUi(v,`Sale`)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/centerView"
            app:layout_constraintTop_toBottomOf="@+id/tvMsg">

            <TextView
                android:id="@+id/tvLbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{saleType.equalsIgnoreCase(`FTD`) ? `Sale` : `Sale (L)`}"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgSale"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@{brandPerformance.slsGrowthPerc > 0 ? @drawable/ic_up_green: @drawable/ic_down_red}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.Sales : brandPerformance.Sales/lacs}"
                bind:colorCombination="@{`NoChange`}"
                bind:symbol="@{`₹`}"
                bind:decimalFormat="@{saleType.equalsIgnoreCase(`FTD`) ? noDecimal : twoDecimal}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{brandPerformance.slsGrowthPerc}"
                bind:colorCombination="@{`Change`}"
                bind:symbol="@{`%`}"
                android:layout_marginLeft="@dimen/_6sdp"
                bind:decimalFormat="@{twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSale" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/budAchLayout"
            android:layout_width="0dp"
            android:onClick="@{(v)-> onItemClick.updateUi(v,`Budget Ach`)}"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_background"
            android:padding="@dimen/_12sdp"
            app:layout_constraintLeft_toRightOf="@+id/centerView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/saleLayout">

            <ImageView
                android:id="@+id/imgbBud"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@{brandPerformance.achievePerc > 100 ? @drawable/ic_up_green : brandPerformance.achievePerc >= 95 ? @drawable/ic_up_yellow : @drawable/ic_down_red}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{saleType.equalsIgnoreCase(`FTD`) ? `Budget Ach` : `Budget Ach(L)`}"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBudAch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{saleType.equalsIgnoreCase(`FTD`) ? brandPerformance.salesBudgt : brandPerformance.salesBudgt/lacs}"
                bind:colorCombination="@{`NoChange`}"
                bind:symbol="@{`₹`}"
                bind:decimalFormat="@{saleType.equalsIgnoreCase(`FTD`) ? noDecimal : twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{brandPerformance.achievePerc}"
                bind:colorCombination="@{`Budget`}"
                bind:symbol="@{`%`}"
                android:layout_marginLeft="@dimen/_6sdp"
                bind:decimalFormat="@{twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBudAch" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qtyLayout"
            android:layout_width="0dp"
            android:onClick="@{(v)-> onItemClick.updateUi(v,`Qty`)}"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/editext_background"
            android:padding="@dimen/_12sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/centerView"
            app:layout_constraintTop_toBottomOf="@+id/budAchLayout">

            <TextView
                android:id="@+id/tvLbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgQty"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@{brandPerformance.slsQtyPerc  > 0 ? @drawable/ic_up_green: @drawable/ic_down_red}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{brandPerformance.slsQty}"
                bind:colorCombination="@{`NoChange`}"
                bind:symbol="@{``}"
                bind:decimalFormat="@{noDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                bind:percent="@{brandPerformance.slsQtyPerc}"
                bind:colorCombination="@{`Change`}"
                bind:symbol="@{`%`}"
                android:layout_marginLeft="@dimen/_6sdp"
                bind:decimalFormat="@{twoDecimal}"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvQty" />


        </androidx.constraintlayout.widget.ConstraintLayout>

