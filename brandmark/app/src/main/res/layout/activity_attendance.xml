<?xml version="1.0" encoding="utf-8"?>
<layout >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".view.planogram.activity.PlanogramActivity">

        <include
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@color/white"
            android:id="@+id/btnDatePick"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

            <View
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/darkgrey"
                android:padding="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/text"
                android:gravity="center"
                android:drawablePadding="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:drawableRight="@drawable/ic_calender"
                app:layout_constraintRight_toLeftOf="@+id/center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/text"
                android:gravity="center"
                android:drawablePadding="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:drawableRight="@drawable/ic_calender"
                app:layout_constraintLeft_toRightOf="@+id/center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected:"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/tvLbl"
            android:textColor="@color/darkgrey"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="@dimen/_6sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvFilterSelected"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintLeft_toRightOf="@+id/tvLbl"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvErrorMsg"
            android:text="No Data Found!!!"
            android:textColor="@color/red"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_8sdp"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFilterSelected"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:id="@+id/recyclerView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>