<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="retailAudit"
            type="com.lifestyle.retail_dashboard.view.retail_audit_checklist.model.GetRACList" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_4sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">


            <TextView
                android:id="@+id/tvRacNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{retailAudit.racNo}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@{retailAudit.rgnName}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRacNo" />


            <TextView
                android:id="@+id/tvStore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@{retailAudit.whStoreName}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRegion" />


            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@{retailAudit.brndDesc}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStore" />


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@{retailAudit.racStatus.equalsIgnoreCase(`Open`) ? @drawable/round_red_button : @drawable/round_green_button}"
                android:padding="@dimen/_4sdp"
                android:text="@{retailAudit.racStatus}"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRegion" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRacNo">

                <TextView
                    android:id="@+id/tvLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Audit By:"
                    android:textColor="@color/ic_home"
                    android:textSize="@dimen/_14sdp"
                       />


                <TextView
                    android:id="@+id/tvAssignTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@{retailAudit.auditBy}"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_14sdp"
                       />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{retailAudit.auditDate}"
                android:textColor="@color/text"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>