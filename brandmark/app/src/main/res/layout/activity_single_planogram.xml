<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="planogram"
            type="com.lifestyle.retail_dashboard.view.planogram.model.Planogram" />

        <variable
            name="inputDF"
            type="java.text.SimpleDateFormat" />
        <variable
            name="outputDF"
            type="java.text.SimpleDateFormat" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:bind="http://schemas.android.com/tools"
        android:background="@drawable/main_bg">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_layout"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvLbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                android:paddingRight="@dimen/_16sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="@{`: `+planogram.fileName}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableRight="@drawable/ic_pdf"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvLbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Concept"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBrand" />

            <TextView
                android:id="@+id/tvConcept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{`: `+planogram.conceptNm}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toBottomOf="@+id/tvBrand" />


            <TextView
                android:id="@+id/tvLbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Brand"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvConcept" />

            <TextView
                android:id="@+id/tvSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{`: `+planogram.brandName}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toBottomOf="@+id/tvConcept" />


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                bind:orignalDate="@{planogram.uploadDTTM}"
                bind:inputDateFormat="@{inputDF}"
                bind:outputDateFormat="@{outputDF}"
                bind:symbol="@{``}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvUploadBy"
                app:layout_constraintTop_toTopOf="@id/tvUploadBy"
                app:layout_constraintBottom_toBottomOf="@+id/tvUploadBy"/>

            <TextView
                android:id="@+id/tvLbl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Season"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSeason" />


            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{`: `+planogram.season}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toBottomOf="@+id/tvSeason" />


            <TextView
                android:id="@+id/tvLbl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Hit"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBrandName" />


            <TextView
                android:id="@+id/tvHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{`: `+planogram.week}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toBottomOf="@+id/tvBrandName" />



            <TextView
                android:id="@+id/tvLbl7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Upload By"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHit" />


            <TextView
                android:id="@+id/tvUploadBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@{`: `+planogram.usrId}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl1"
                app:layout_constraintTop_toBottomOf="@+id/tvHit" />



            <TextView
                android:id="@+id/tvLbl8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Uploaded Image:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUploadBy" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLbl8"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="No Image Found"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/red"
                android:id="@+id/tvErrorMsg"
                android:visibility="gone"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageRecyclerView"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>