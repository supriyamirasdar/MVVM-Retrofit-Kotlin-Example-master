<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="usecase"
            type="com.lifestyle.retail_dashboard.view.homescreen.model.Usecase" />

        <variable
            name="onItemClick"
            type="com.lifestyle.retail_dashboard.view.homescreen.model.Usecase.ItemClickListner" />
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_6sdp"
    android:onClick="@{(v)->onItemClick.onItemClick(v,usecase.name)}"
    android:background="@drawable/recylerviewselector">

    <ImageView
        android:id="@+id/title_iv"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerInside"
        android:padding="@dimen/_10sdp"
        app:imageResource="@{usecase.icon}"
        android:background="@drawable/ic_home_screen_item"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:hint="Name"
        android:text="@{usecase.name}"
        android:textAlignment="center"
        android:textColor="#2b2b2b"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>
</layout>