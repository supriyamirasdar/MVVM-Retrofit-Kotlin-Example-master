<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".view.attendance.activity.AttendanceHomeActivity">

        <include
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Attendance of"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/tvLbl"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/spBrands"
                app:layout_constraintBottom_toBottomOf="@+id/spBrands"/>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl"
                android:layout_marginLeft="@dimen/_2sdp"
                android:id="@+id/spBrands"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout"
                android:weightSum="4"
                android:layout_marginTop="@dimen/_6sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl"
                app:layout_constraintLeft_toLeftOf="parent">

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">



                </LinearLayout>-->


                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_6sdp">


                </LinearLayout>-->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:background="@color/blue"
                    android:id="@+id/totalEmpLayout"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        android:id="@+id/tvTotalEmplyee"
                        android:textSize="@dimen/_15sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total\nEmployees"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/tvTotalEmplyee"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_4sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:id="@+id/presentEmpLayout"
                    app:layout_constraintTop_toTopOf="@+id/totalEmpLayout"
                    app:layout_constraintLeft_toRightOf="@+id/totalEmpLayout"
                    android:layout_marginLeft="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        android:id="@+id/tvPresentEmployee"
                        android:textSize="@dimen/_15sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present\nEmployees"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/tvPresentEmployee"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_4sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:background="@color/red"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:id="@+id/absetEmpLayout"
                    app:layout_constraintTop_toTopOf="@+id/presentEmpLayout"
                    app:layout_constraintLeft_toRightOf="@+id/presentEmpLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        android:id="@+id/tvAbsentEmployee"
                        android:textSize="@dimen/_15sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent\nEmployees"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/tvAbsentEmployee"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_4sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:background="@color/purple"
                    android:layout_weight="1"
                    android:id="@+id/onLeaveLayout"
                    app:layout_constraintTop_toTopOf="@+id/presentEmpLayout"
                    app:layout_constraintLeft_toRightOf="@+id/presentEmpLayout"
                    android:layout_marginLeft="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="0"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textStyle="bold"
                        android:id="@+id/tvonLeave"
                        android:textSize="@dimen/_15sdp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OnLeave\nEmployees"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/tvonLeave"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_4sdp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Attendance Summary"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/tvLbl2"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/layout"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:id="@+id/combinedChart"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl2"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>