<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="availEmpList"
            type="com.lifestyle.retail_dashboard.view.store_contact.model.GetBrandRacAvailEmpList" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tvLbl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/centerView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{availEmpList.spoc}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/centerView1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Contact No"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl1" />

            <TextView
                android:id="@+id/centerView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl5"
                app:layout_constraintTop_toBottomOf="@+id/centerView1" />

            <TextView
                android:id="@+id/tvContactNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{availEmpList.mobile}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/centerView2"
                app:layout_constraintRight_toLeftOf="@+id/btnCall"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCall"
                app:layout_constraintRight_toLeftOf="@+id/btnVideoCall"

                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:srcCompat="@drawable/ic_call"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnVideoCall"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_vido_call"/>


            <TextView
                android:id="@+id/tvLbl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Email Id"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl2" />

            <TextView
                android:id="@+id/centerView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl5"
                app:layout_constraintTop_toBottomOf="@+id/centerView2" />

            <TextView
                android:id="@+id/tvEmailId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{availEmpList.email}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/centerView3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btnEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNo" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/btnEmail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContactNo"
                android:src="@drawable/email"
                android:tint="@color/blue"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvLbl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Designation"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl4" />

            <TextView
                android:id="@+id/centerView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl5"
                app:layout_constraintTop_toBottomOf="@+id/centerView3" />

            <TextView
                android:id="@+id/tvDesignation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{availEmpList.roleNm}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/centerView4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailId" />

            <TextView
                android:id="@+id/tvLbl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Concept"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLbl5" />

            <TextView
                android:id="@+id/centerView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/tvLbl5"
                app:layout_constraintTop_toBottomOf="@+id/centerView4" />

            <TextView
                android:id="@+id/tvConcept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{availEmpList.cmName}"
                android:textColor="@color/text"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintLeft_toRightOf="@+id/centerView5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDesignation" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>