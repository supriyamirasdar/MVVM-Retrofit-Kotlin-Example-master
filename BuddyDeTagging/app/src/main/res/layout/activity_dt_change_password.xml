<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeff5"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_top"
            layout="@layout/toolbar_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                    <EditText
                        android:id="@+id/etOldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/editext_background"
                        android:drawableLeft="@drawable/ic_old_password"
                        android:drawablePadding="@dimen/_6sdp"
                        android:hint="Enter One Time Password*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="textWebPassword"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/show_pass_btn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:alpha=".5"

                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/password_toggle_drawable" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp">

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editext_background"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="@dimen/_6sdp"
                        android:hint="Enter New Password*"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="textWebPassword"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/show_newpass_btn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:alpha=".5"

                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/password_toggle_drawable" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp">

                    <EditText
                        android:id="@+id/etConfirmPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editext_background"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="@dimen/_6sdp"
                        android:hint="Enter Confirm Password*"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:inputType="textWebPassword"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:id="@+id/show_conpass_btn"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:alpha=".5"

                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/password_toggle_drawable" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_35sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/toolbar_bg"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
